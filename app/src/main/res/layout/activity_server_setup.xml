<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light"
    android:gravity="center">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="32dp"
        app:cardElevation="16dp"
        app:strokeWidth="0dp"
        android:layout_margin="32dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="40dp"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_cloud" 
                android:contentDescription="Сервер"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:tint="@color/blue_accent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Адрес сервера"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_marginBottom="6dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp"
                app:boxStrokeColor="@color/blue_accent"
                app:boxBackgroundColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextServerUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="start"
                    android:inputType="textUri"
                    android:paddingVertical="12dp"
                    android:text="https://dev.radabot.ru"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Пример: http://192.168.1.100:8080"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="28dp"
                android:fontFamily="sans-serif"
                android:gravity="center" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonConfirm"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Подтвердить"
                android:textAllCaps="false"
                android:textSize="18sp"
                app:cornerRadius="24dp"
                app:icon="@drawable/ic_check"
                app:iconTint="@color/white"
                app:iconPadding="12dp"
                app:iconGravity="textStart"
                android:backgroundTint="@color/blue_accent"
                android:textColor="@color/white"
                android:elevation="4dp"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout> 